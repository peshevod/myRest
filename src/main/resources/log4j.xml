<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ISO8601}  %-5p[       %t](%F - %L)%c{1}  : %m%n"/>
        </Console>
        <File name="File" fileName="src/main/resources/logs/system.log">
            <PatternLayout>
                <pattern>%d{ISO8601}  %-5p[       %t](%F - %L)%c{1}  : %m%n</pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
